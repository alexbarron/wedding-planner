
<h1 class="text-center"><%= @wedding.name %></h1>
<div class="row">
<div class="col-md-4 col-md-offset-2">
<p>Location: <%= @wedding.location %></p>
<p>Date: <%= @wedding.formatted_date %></p>
<p>
  Invited Guests: <%= @wedding.guests.count %><br />
  Confirmed Guests: <%= @wedding.confirmed_guests.count %>
</p>

<p>
  Vendor Count: <%= @wedding.vendors.count %><br />
  Vendor Cost Total: <%= @wedding.total_vendor_cost %><br />
  Average Vendor Cost: <%= @wedding.avg_vendor_cost %>
</p>
</div>
<div class="col-md-4 col-md-offset-2">
<a href="/wedding/edit" class="btn btn-primary">Edit Wedding</a>

<br />
<br />

<form action="/wedding/delete" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" class="btn btn-danger" value="Delete Wedding">
</form>
</div>
</div>

